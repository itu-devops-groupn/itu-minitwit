@page "/login"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Minitwit.Web.Pages.LoginModel
@{
    Layout = "Shared/_Layout.cshtml";
    string? error = ViewData.ModelState["error"]?.Errors.FirstOrDefault()?.ErrorMessage;
}
<h2>Sign In</h2>
@if(error != null)
{
    <div class=error><strong>Error:</strong> @(error)</div>
}

<form method=post>
    <dl>
        <dt>Username:
        <dd><input type=text name=username asp-for="Username" size=30 value="">
        <dt>Password:
        <dd><input type=password name=password asp-for="Password" size=30>
    </dl>
    <div class=actions><input type=submit value="Sign In"></div>
    @Html.AntiForgeryToken()
</form>